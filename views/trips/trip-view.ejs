
<div class="row" id="map"></div>

<div class="row tripContainer">

    <div class="col-md-6">
        <h2><strong><%= trip.name %></strong></h2>
        <p><%= trip.content %></p>
        <% destinations.forEach((oneDest) => { %>
            <div class="row oneDest">
                <h3><%= oneDest.name %></h3>
                <p><em><i class="fa fa-map-marker" aria-hidden="true"></i> <%= oneDest.address %></em></p>
                <p><%= oneDest.review %></p>
            </div>
            <% }) %>
    </div>
        <div class="col-md-offset-1 col-md-5">
    <form id="adddest" method="POST" action="/trips/<%= trip._id %>">

      <input type="text" name="destname" placeholder="Name">

      <label></label>
      <input id="address" type="text" name="destaddress" placeholder="Address">

      <textarea type="text" name="destdesc" placeholder="Review"></textarea>
      <br>
      <%# <label>Address</label>
      <input type="text" name="latitude" placeholder="Latitude" >
      <input type="text" name="longitude" placeholder="Longitude">%>


     <button class="hvr-grow" type="submit"><i class="fa fa-plus"></i> Add Attraction</button>
    </div>
    </form>

</div>




